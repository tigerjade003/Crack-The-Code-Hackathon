from scapy.all import ARP, Ether, srp

def discover_local_network():
    # Create an ARP request packet
    arp = ARP(pdst="10.20.66.0/24")  # Set the target IP range (replace with your local network range)

    # Create an Ethernet frame
    ether = Ether(dst="ff:ff:ff:ff:ff:ff")

    # Combine ARP and Ethernet frame
    packet = ether / arp

    # Send the packet and capture responses
    result = srp(packet, timeout=3, verbose=0)[0]

    # Extract IP addresses from the responses
    active_ips = []
    for sent, received in result:
        active_ips.append(received.psrc)

    return active_ips

if __name__ == "__main__":
    active_ips = discover_local_network()
    print("Active IP addresses on the local network:")
    for ip in active_ips:
        print(ip)
